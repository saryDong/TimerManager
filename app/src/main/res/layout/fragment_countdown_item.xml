<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="6dp"
    android:id="@+id/bg_parent"
    app:cardBackgroundColor="@color/content"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/holiday_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元旦"
            android:textSize="15sp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="18dp"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="距离节假日还有"
            android:textColor="@android:color/white"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="18dp"
            app:layout_constraintTop_toTopOf="@+id/holiday_name"
             />

        <TextView
            android:id="@+id/holiday_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-7-9"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/holiday_name"
            app:layout_constraintTop_toBottomOf="@id/holiday_name"
            />

        <android.support.constraint.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:constraint_referenced_ids="holiday_name,progressBar" />
        <android.support.constraint.Barrier
            android:id="@+id/bars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:constraint_referenced_ids="holiday_time,distance_time" />

        <TextView
            android:id="@+id/distance_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2月23天45时23分12秒"
            android:textSize="15sp"
            android:layout_marginEnd="18dp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/holiday_time"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/holiday_time" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>