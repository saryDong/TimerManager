<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="6dp"
    app:cardBackgroundColor="@color/content"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/holiday_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="元旦"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/holiday_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-7-9"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="@+id/distance_time"
            app:layout_constraintTop_toTopOf="@+id/holiday_name" />

        <com.abu.timermanager.widget.MultistageProgress
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/holiday_name"
            app:layout_constraintTop_toBottomOf="@id/holiday_name" />

        <android.support.constraint.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:constraint_referenced_ids="holiday_name,progressBar" />

        <TextView
            android:id="@+id/distance_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距离：2月23天45时23分12秒"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/barrier"
            app:layout_constraintTop_toTopOf="@+id/progressBar" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>